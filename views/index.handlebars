	{{#each News}}
	{{#unless saved}}
		<div class="panel panel-primary">

 	 		<div class="panel-body" id="news">
    		{{this.title}}
    		<button type="submit" class="btn btn-success float-right" id="save" data-id="{{this.id}}">Save Article</button>
  			</div>

  			<div class="panel-footer" id="newslink">
  			{{this.link}}
  			</div>
		</div>
	{{/unless}}
	{{/each}}
</div>

